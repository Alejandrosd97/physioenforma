<style>
    .contenedor{
        width: 100%;
        margin:auto;
        height: 600px;
        overflow:hidden;
        display:flex;
        justify-content: center;
        position:relative
    }

    .slider{
        width: 100%;
        height: 400px;
        position:relative
    }

    .buttons{
        position:absolute;
        left:50%;
        transform:translateX(-50%);
        bottom:220px;
        display: flex;
        gap:20px;
        z-index:20
    }

    .btn{
        color:black;
        font-size:40px;
        height: 40px;
        width:40px;
        border-radius:2px;
        background-color:rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        padding:0;
        transition:0.2s
    }

    .btn:hover{
        background-color:rgba(0, 0, 0, 0.4);
    }

    .slides{
        position:absolute;
        border-radius:16px;
        /* background:linear-gradient(to bottom, transparent 0%, black 100%), var(--img) ; */
        background:var(--img) ;
        background-size:cover;
        background-position:center;
        transition:0.5s;
        width: calc(25% - 2px);
        height: 140px;
        bottom: -160px;
        top: initial;
        z-index:10
    }

    @media screen and (max-width:768px){
        .slider{
            height: 300px;
        }
        .slides{
            height: 100px;
            bottom: -110px
        }
        .buttons{
            bottom : 310px;
        }   
    }

    @media screen and (max-width:480px){
        .slides{
            height: 60px;
            bottom: -70px

        }
    }


    .slides:nth-child(1),
    .slides:nth-child(2){
        left:0;
        width: 100%;
        height: 100%;
        transform: translateY(0);
        top:initial;
        bottom:0;
        
    }

    .slides:nth-child(3){
        left:0;
    }
    .slides:nth-child(4){
        left:calc(25%);
    }
    .slides:nth-child(5){
        left:calc(50%);
    }
    .slides:nth-child(6){
        left:calc(75%);
    }
    

</style>

